<div class="card">
    <img src="images/@WarbandId/apprentice.png" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Apprentice</h5>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Mv</th>
                <th scope="col">Fi</th>
                <th scope="col">Sh</th>
                <th scope="col">Ar</th>
                <th scope="col">Wi</th>
                <th scope="col">HP</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Apprentice.Stats.Move"</td>
                <td>@Apprentice.Stats.Fight</td>
                <td>@Apprentice.Stats.Shoot</td>
                <td>@Apprentice.Stats.Armour</td>
                <td>@Apprentice.Stats.Will</td>
                <td>@Apprentice.Stats.Health</td>
            </tr>
            </tbody>
        </table>
        <table class="table">
            <caption>@Apprentice.WeaponProfile.Notes</caption>
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Damage Modifier</th>
                <th scope="col">Maximum Range</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Apprentice.WeaponProfile.Type</td>
                <td>@Apprentice.WeaponProfile.DamageModifier</td>
                <td>@Apprentice.WeaponProfile.MaximumRange</td>
            </tr>
            </tbody>
        </table>
        <a href="warband/@WarbandId/spells/false" class="card-link">Show Spells</a>
    </div>
</div>

@code {

    [Parameter]
    public Guid WarbandId { get; set; } = Guid.Empty;

    [Parameter]
    public Apprentice Apprentice { get; set; } = new();

}